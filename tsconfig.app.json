{
	"extends": "astro/tsconfigs/strictest",
	"include": ["src/**/*", "src/**/*.astro", "tailwind.config.ts"],
	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@assets/*": ["./src/assets/*"],
			"@utils/*": ["./src/utils/*"]
		},
		"types": []
	}
}
